{
  "name":"Steve V1",
  "interface":[
                {
                 "name": "RC",
                 "type": "serial",
                 "data_format": "raw",
                 "readonly":false,
                 "r_sync":"0xAA,0x00",
                 "t_sync":"0x9D,0x5D,0x5D",
                 "checksum":false
               },
               {
                "name":"Debug",
                "type": "serial",
                "data_format": "ascii",
                "readonly": true,
                "t_sync": "",
                "r_sync": "",
                "log": true
               }
             ],
  "commands":[
      {
        "name":"drive",
        "interface":"RC",
        "length": "compute",
        "data":"[T_SYNC],[LENGTH],0x01,0x00,[S],[S],[D]",
        "variables":[{"name":"speed",
                      "placeholder":"S",
                      "type":"byte",
                      "length":"2",
                      "min-value":"-400",
                      "max-value":"400"
                     },
                     {
                      "name":"direction",
                      "placeholder":"D",
                      "type":"byte",
                      "length":"1",
                      "min-value":"0",
                      "max-value":"90"
                      }
                   ],
        "response":{
                    "expect": "false",
                    "timeout":100,
                    "blocking": "false"
                   }
      }
  ],

  "response_format":[
                {
                 "name": "Encoder Sensor",
                 "sync":"[R_SYNC]",
                 "data_format":[
                                  {
                                    "name": "Type",
                                    "length": 1,
                                    "data_type": "byte",
                                    "rules": [
                                               {"op":"eq","value":10}
                                            ],
                                    "endianess": ""
                                  },
                                  {
                                    "name": "Length",
                                    "length": 1,
                                    "data_type": "byte",
                                  },
                                  {
                                    "name": "Sensor Group",
                                    "length": 1,
                                    "data_type": "byte",
                                  },
                                  {
                                    "name": "Raw Encoder Right",
                                    "length":"4",
                                    "data_type": "int",
                                  },
                                  {
                                    "name": "Raw Encoder Left",
                                    "length":"4",
                                    "data_type": "int",
                                  },
                                  {
                                    "name": "Speed left",
                                    "length":"4",
                                    "data_type": "float",
                                    "endianess": "bigendian"
                                  },
                                  {
                                    "name": "Speed Right",
                                    "length":"4",
                                    "data_type": "float",
                                    "endianess": "bigendian"
                                  },
                              ],
                }
  ]



}
